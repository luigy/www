@import './colors.styl'

// bootstrap helpers
.navbar-form input, .form-inline input
  width auto

header
  min-height 180px
  margin-bottom 5px

.affix
  position static
// end

body
  font-weight 300
  color fcolor
  background-color bg
  font-family 'Open Sans',Arial,Helvetica,Sans-Serif !important

a, a:hover
  color html5-niceblue
  text-decoration none

.highlight-bk
  background-color #77CCDD
  padding 1px
  width 100%

.highlight
  color #77CCDD

h3
  &.highlight
    padding-top 13px
    padding-bottom 14px
    border-bottom 2px solid #77CCDD

.navbar
  background-color html5-ltorange
  color #ffffff
  border-radius 0

.navbar-nav
  font-family 'Open Sans',Arial,Helvetica,Sans-Serif !important
  & > li
    & > a
      color #fff
      padding-left 20px
      padding-right 20px
      border-left 1px solid #aaa

    &:last-child
      & > a
        border-right 1px solid #aaa
  li
    a
      &:hover
        background-color html5-darkorange

.navbar-nav > .open > a, .navbar-nav > .open > a:hover, .navbar-nav > .open > a:focus
  color #000
  opacity .9

.navbar-brand
  color #fff
  font-weight 300;

  &:hover
    color #fff

.accordion-group
  border-width 0

.dropdown-menu
  min-width 250px

.caret
  color #fff

.navbar-toggle
  color #fff
  border-width 0
  &:hover
    background-color #fff

.panel,.panel-heading
  border-radius 0
  border-width 0
  -webkit-box-shadow 0 3px 3px rgba(0, 0, 0, 0.09)
  box-shadow 0 3px 3px  rgba(0, 0, 0, 0.09)

.thumbnail
  margin-bottom 8px
  border-radius 0

.well
  border-radius 0

.accordion-heading .accordion-toggle, .accordion-inner, .nav-stacked li > a
  padding-left 1px

.icon-2x
  color #676767

/* only apply sticky columns on wider screens */
@media (min-width: 1200px)
  #sidebar
    margin-left:15px;

  #content
    padding-right:15px;

  #sidebar
    .affix-top
      position: static;

    &.affix
      position: fixed !important;
      top: 20px;
      width:180px;

  #midCol
    .affix-top
      position: static;

    &.affix-bottom
      padding-top:0;

    &.affix
      position:fixed !important;
      top: 20px;
      width:293px;

@media (min-width: 992px)
  .no-gutter.row
    & > div[class*='col-md']
      padding-left: 0;
      padding-right: 0;

